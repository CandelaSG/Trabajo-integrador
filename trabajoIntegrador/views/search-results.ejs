<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado')  %> 
	<% } else{%>
			<%- include('./partials/header')  %> 
	<% } %> 

		<main>
			<!-- Novedades -->
			<section class="container products-wrapper">
				<section class="row">
					<article class="col-12">
						<h2 class="products-title">Resultado de la busqueda: <%= busqueda %> <a href="/product/add"> <i class="fa-regular fa-pen-to-square"></i></a></h2> 
					</article>
					<!-- Show the "ultimos" products -->
					<% for( let i = 0; i < listaProductos.length; i++ ) { %>
						<article class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="id/<%=listaProductos[i].id%>">
									<figure class="product-box_image">
										<img src="<%=listaProductos[i].foto %>" alt="Imagen de <%=listaProductos[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2><%=listaProductos[i].nombre %></h2>
										<p><%=listaProductos[i].descripcion %></p>
										<p>Comentarios: 5</p>
									</article>
								</a>
							</section>
						</article>
					<% } %>
				</section>
			</section>

		</main>
		
		<!-- footer -->
		<%- include('./partials/footer') %>

	</body>

</html>