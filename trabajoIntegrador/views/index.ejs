<!DOCTYPE html>
<html lang="es">
	<!-- Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado')  %> 
	<% } else{%>
			<%- include('./partials/header')  %> 
	<% } %> 

		<main>
			<!-- Banner -->
			<section class="banner">
				<a href="product/id/6"><img src="images/banner.png" alt="Banner de ofertas"></a>
			</section>

			<!-- Novedades -->
			<section class="container products-wrapper">
				<section class="row">
					<article class="col-12">
						<h2 class="products-title">Novedades</h2>
					</article>
					<!-- Show the "ultimos" products -->
					<% for( let i = 0; i < 4; i++ ) { %>
						<article class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="product/id/<%=productosMain[i].id%>">
									<figure class="product-box_image">
										<img src="<%=productosMain[i].foto %>" alt="Imagen de <%=productosMain[i].nombre %>" height="255 px" width="255 px" >
									</figure>
									<article class="product-box_data">
										<h2><%=productosMain[i].nombre %></h2>
										<p><%=productosMain[i].descripcion %></p>
										<p>Comentarios: <%=productosMain[i].comentario.length %></p>
										<p>Creador: <a href="profile/id/<%= productosMain[i].perfil.id %>"> <%= productosMain[i].perfil.usuario %> </a></p>
									</article>
								</a>
							</section>
						</article>
					<% } %>
				</section>
			</section>

			<!-- Más comentados-->
			<section class="container products-wrapper">
				<section class="row">
					<article class="col-12">
						<h2 class="products-title">Más comentados</h2>
					</article> 
					<!-- Show the "ultimos" products -->

					<% for( let i = 4; i < 8; i++ ) { %>
						<article class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="product/id/<%=productosMain[i].id%>">
									<figure class="product-box_image">
										<img height="255 px" width="255 px"  src="<%=productosMain[i].foto %>" alt="Imagen de <%=productosMain[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2><%=productosMain[i].nombre %></h2>
										<p><%=productosMain[i].descripcion %></p>
										<p>Comentarios: <%=productosMain[i].comentario.length %></p>
										<p>Creador: <a href="profile/id/<%= productosMain[i].perfil.id %>"> <%= productosMain[i].perfil.usuario %> </a></p>
									</article>
								</a>
							</section>
						</article>
					<% } %>
				</section>
			</section>
		</main>

		<!-- footer -->
		<%- include('./partials/footer') %>
	</body>	
</html>