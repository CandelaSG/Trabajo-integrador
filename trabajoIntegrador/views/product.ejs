<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>
	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<main>
			<!-- Product detail -->
			<section class="containerProducts products-wrapper">

				<article class="d-flex align-items-center">
					<h2 class="products-title"><%= producto.nombre %>       <a href="/product/update/<%= producto.id %>"> <i class="fa-regular fa-pen-to-square"></i></a></h2> 
				</article>

				<article class="product-detail">
					<section class="row">
						<article class="col-12 col-lg-8 product-detail-info">
							<img src=<%= producto.foto %>  alt=<%= producto.nombre %> class="product-detail-img">
							<p class="product-detail-description">
								<%= producto.descripcion %>
							</p>
							
							
						</article>
						<article class="col-12 col-lg-4">
							<section class="comments">
								<% for( let i = 0; i < producto.comentario.length; i++ ) { %>
									<article>
										<img src=<%= producto.comentario[i].perfil.foto_perfil %> alt="Foto perfil">
										<div class="data">
											<p class="user">
											<strong> <a href="/profile"><%= producto.comentario[i].perfil.usuario %>: </a> </strong>
											<%= producto.comentario[i].texto %></p>
										</div>
									</article>
								<% } %>
							</section>

							<form class="form" action="/product/comentario/<%= producto.id %>" method="POST">
								<input class="form-input" type="text" value="" placeholder="Agregar comentario" name="comentario">
								<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
							</form>
							<hr>

						</article>

					</section>
				</article>
				
			</section>
		</main>

		<!-- footer -->
		<%- include('./partials/footer') %>

	</body>	
</html>